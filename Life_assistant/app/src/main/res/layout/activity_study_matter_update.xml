<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/study_matter_updateObjectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/study_matter_updateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/study_matter_updateContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/study_matter_updateTitle"/>
    <RadioGroup
        android:id="@+id/study_matter_updateRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/study_matter_updateContent">

        <RadioButton
            android:id="@+id/study_matter_updateState0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未开始"/>
        <RadioButton
            android:id="@+id/study_matter_updateState1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"/>
        <RadioButton
            android:id="@+id/study_matter_updateState2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"/>
        <RadioButton
            android:id="@+id/study_matter_updateState3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终止"/>

    </RadioGroup>
    <Button
        android:id="@+id/study_matter_updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/study_matter_updateRadioGroup"
        android:text="修改"/>

</RelativeLayout>