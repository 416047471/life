<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/study_memorandum_updateObjectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/study_memorandum_updateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/study_memorandum_updateContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/study_memorandum_updateTitle"/>
    <Button
        android:id="@+id/study_memorandumr_updateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/study_memorandum_updateContent"
        android:text="修改"/>

</RelativeLayout>