<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index.study.target.studyTargetActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/study_target_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/study_target_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/toolbarTheme"
        app:navigationIcon="@drawable/more"
        app:subtitle="将目标拆分，分级攻破"
        app:title="目标" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/study_target_appbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/study_target_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/study_target_addImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_matter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>