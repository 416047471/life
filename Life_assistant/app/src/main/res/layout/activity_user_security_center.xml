<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".index.user.userSecurityCenterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/securityCenter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/toolbarTheme"
        app:navigationIcon="@drawable/left_key"
        app:title="安全中心"
        app:titleTextColor="@color/black" />

    <Button
        android:id="@+id/securityCenter_updatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/gray"/>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black" />
    <Button
        android:id="@+id/securityCenter_cancelPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注销用户"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/gray"/>

</LinearLayout>