<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".index.user.userStyleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_style_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/left_key"
        android:background="?attr/toolbarTheme"
        app:title="主题管理"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@color/gray">

        <RadioGroup
            android:id="@+id/user_style_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <RadioButton
                android:id="@+id/user_style_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/textTheme"
                android:text="绿色"/>
            <RadioButton
                android:id="@+id/user_style_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="黄色"/>
            <RadioButton
                android:id="@+id/user_style_purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="紫色"/>
            <RadioButton
                android:id="@+id/user_style_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝色"/>
            <RadioButton
                android:id="@+id/user_style_pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="粉色"/>
            <RadioButton
                android:id="@+id/user_style_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="黑色"/>
            <RadioButton
                android:id="@+id/user_style_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="白色"/>

        </RadioGroup>

    </LinearLayout>
</LinearLayout>